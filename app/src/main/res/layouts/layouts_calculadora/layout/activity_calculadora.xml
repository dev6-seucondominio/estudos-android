<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculadoraBgColor"
    tools:context=".erp.calculadora.CalculadoraActivity"
    tools:layout_constraintCircleAngle="244">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/calculadoraBgColor"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="10dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:layout_constraintCircleRadius="@dimen/default_gap">

        <Button
            android:id="@+id/botaoLimpar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="C"
            android:textColor="@color/calculadoraOptColor" />

        <Button
            android:id="@+id/botaoDivisao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="%"
            android:textColor="@color/calculadoraOptColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_8"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="8"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_9"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="9"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botaoMultiplicacao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="X"
            android:textColor="@color/calculadoraOptColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_5"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="5"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_6"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="6"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botaoSubtracao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="_"
            android:textColor="@color/calculadoraOptColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_2"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="2"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_3"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="3"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botaoSomar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="+"
            android:textColor="@color/calculadoraOptColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button45"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="."
            android:textColor="@color/calculadoraBtnColor" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/calculadoraUndefinedBgColor"
            android:onClick="executarOperacao" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/calculadoraUndefinedBgColor"
            android:onClick="executarOperacao" />

        <Button
            android:id="@+id/button4"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@color/calculadoraNullBgColor"
            android:onClick="executarOperacao"
            android:textColor="@color/calculadoraBtnColor" />

        <Button
            android:id="@+id/botaoResultado"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_marginBottom="8dp"
            android:background="@color/calculadoraOptBgColor"
            android:onClick="executarOperacao"
            android:text="="
            android:textColor="@color/calculadoraOptColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_7"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="7"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold"
            tools:layout_marginTop="0dp" />

        <Button
            android:id="@+id/calculadora_numero_4"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="4"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_1"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="1"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculadora_numero_0"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/calculadoraBtnBgColor"
            android:onClick="executarOperacao"
            android:text="0"
            android:textColor="@color/calculadoraBtnColor"
            android:textStyle="bold" />

    </GridLayout>

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/calculadoraResultadoColor"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>